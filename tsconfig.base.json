{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"],

      "@/components/*": ["client/src/components/*"],
      "@/components/ui/*": ["client/src/components/ui/*"],
      "@/lib/*": ["client/src/lib/*"],
      "@/hooks/*": ["client/src/hooks/*"],
      "@/utils/*": ["client/src/lib/utils"]
    }
  }
}